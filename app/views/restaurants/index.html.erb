<div class="cards">
<% @restaurants.each do |restaurant| %>
  <div class="card">
    <div class="card-body">
      <h5 class="card-title"><%= restaurant.name %></h5>
    </div>
    <ul class="list-group list-group-flush">
      <li class="list-group-item"><%= restaurant.category.capitalize %></li>
    </ul>
    <div class="card-body">
      <%= link_to "See details", restaurant_path(restaurant), class: "text-decoration-none" %>
    </div>
  </div>
<% end %>
</div>

