<%= simple_form_for(@restaurant) do |f| %>
  <%= f.label :name, class: "form-label" %>
  <%= f.text_field :name, class: "form-control mb-4" %>
  <%= f.label :address, class: "form-label" %>
  <%= f.text_field :address, class: "form-control mb-4" %>
  <%= f.label :phone_number, class: "form-label" %>
  <%= f.text_field :phone_number, class: "form-control mb-4" %>
  <%= f.label :category, class: "form-label" %>
  <%= f.text_field :category, class: "form-control mb-4" %>
  <%= f.submit "Create restaurant", class: "btn btn-primary" %>
<% end %>